                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="personContactTable" minWidth="-Infinity" prefHeight="298.0" prefWidth="175.0"
