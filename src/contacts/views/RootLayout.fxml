<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/9.0.1" fx:controller="contacts.controllers.RootLayoutController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleOpenDirectory"
                                  text="Открыть справочник из файла"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleNewDirectory" text="Новый справочник"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleSaveDirectory" text="Сохранить"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Действия">
                    <items>
                        <Menu mnemonicParsing="false" text="Контакты">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleCreateNewContact"
                                          text="Новый контакт"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Группы контактов">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleCreateContactsGroup"
                                          text="Новая группа"/>
                                <MenuItem mnemonicParsing="false" onAction="#handleEditContactsGroups"
                                          text="Управление группами"/>
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Помощь">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
