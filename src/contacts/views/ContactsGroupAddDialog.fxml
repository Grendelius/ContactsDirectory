<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="100.0" minWidth="400.0" prefHeight="250.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="contacts.controllers.ContactsGroupAddDialogController">
    <children>
        <GridPane layoutX="30.0" layoutY="84.0" minHeight="25.0" minWidth="300.0" prefHeight="25.0" prefWidth="340.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="171.0" minWidth="10.0" prefWidth="170.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="10.0" prefWidth="170.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Наименование группы:"/>
                <TextField fx:id="groupName" promptText="максимум 15 символов" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <Button layoutX="153.0" layoutY="151.0" mnemonicParsing="false" onAction="#handleAdd" text="Add the group"/>
        <Button layoutX="318.0" layoutY="205.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel"/>
    </children>
</AnchorPane>
